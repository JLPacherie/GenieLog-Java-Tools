// ****************************************************************************
// Genielog Java Toolbox.
//
// Jenkins Configuration
// ----------------------------------------------------------------------------
// Author: Jean-Lin Pacherie. 
// ****************************************************************************
{

	// Version number of the configuration file
	"version": "1.0",

	"includes": [
		// --------------------------------------------------------------------------
		"project.json",        // Base definitions for a Generic Project
		"project-maven.json",  // Additional definitions for project using Maven
		// --------------------------------------------------------------------------
		"cov-java.json",    	// Additional Coverity definitions for Java/JS
		"sonar-java.json"  		// Additional Coverity definitions for Java/JS
	],

	"sonar": {
		"enabled": true
	},
	
	"coverity": {
		"enabled": true
	},
	
	"blackduck": {
		"enabled": true
	},

	// **************************************************************************
	// Project Specific Build Configuration for this project
	// **************************************************************************
	"project": {
		
		// The name of the project
		"name": "GenieLog Java Tools",

		// The version name of the project
		"version": "last",

		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the build stage
		// ----------------------------------------------------------------------------------------------------------------		

		//
		// Configuration of the project build.
		//
		"build": {
			
			"enabled": true,
			
			// It's a pretty small project. no need for incremental
			"incremental": false			

		},

		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the QA testing stage
		// ----------------------------------------------------------------------------------------------------------------		

		"test": {
			// Skip testing. That code is not yet polished and may fail purposeless
			"enabled": false				

		},
		
		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the Installation stage (the artifacts are made available for other projects)
		// ----------------------------------------------------------------------------------------------------------------		

		"install": {

			"enabled": true
				
		},
		
		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the Deploy stage (the artifact is deployed - if an app then it's executed')
		// ----------------------------------------------------------------------------------------------------------------		
		
		"deploy": {
			"enabled": false			
		}	
	}
}