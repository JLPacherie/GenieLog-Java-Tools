{

	// Version number of the configuration file
	"version": "1.0",

	"includes": [
		// --------------------------------------------------------------------------
		"project.json",      // Base definitions for a Generic Project
		// --------------------------------------------------------------------------
		"cov-java.json"  		 // Additional Coverity definitions for Java/JS 
	],

	// **************************************************************************
	// Project Specific Build Configuration for this project
	// **************************************************************************
	"project": {
		
		// The name of the project
		"name": "GenieLog Java Tools",

		// The version name of the project
		"version": "last",
		
		// Where are located the source code. Used by SCA for source code
		"sources": [
			"."
		],

		// Where are located the target artifacts. Used by SCA for Binary
		"targets": [
			"target/com.genielog.tools*.jar"
		],

		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the build stage
		// ----------------------------------------------------------------------------------------------------------------		

		//
		// Configuration of the project build.
		//
		"build": {
			
			"enabled": true,
			
			// It's a pretty small project. no need for incremental
			"incremental": false,

			//
			// The build phase is executed from a Docker container
			//
			"docker": {
				"image": "maven:3.6-jdk-11",
				"args": ""
			},

			//
			// Build script / command
			//

			// This command is executed before trying to build or clean
			"init_command": "",

			// This command is executed only for a fresh / full build
			"build_command": " mvn -Dmaven.repo.local=\"${.snps-extpack.maven_cache}\" -DskipTests package",

			// This command is for cleaning the build
			"clean_command": " mvn -Dmaven.repo.local=\"${.snps-extpack.maven_cache}\" -DskipTests clean"
			
		},

		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the QA testing stage
		// ----------------------------------------------------------------------------------------------------------------		

		"test": {

			"enabled": true,

			//
			// The testing phase is executed from a Docker container
			//
			"docker": {
				"image": "maven:3.6-jdk-11",
				"args": ""
			},

			// This command is for QA testing
			"command": " mvn -Dmaven.repo.local=\"${.snps-extpack.maven_cache}\" test"
				
		},
		
		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the Installation stage (the artifacts are made available for other projects)
		// ----------------------------------------------------------------------------------------------------------------		

		"install": {

			"enabled": true,

			//
			// The testing phase is executed from a Docker container
			//
			"docker": {
				"image": "maven:3.6-jdk-11",
				"args": ""
			},

			// This command is for QA testing
			"command": " mvn -Dmaven.repo.local=\"${.snps-extpack.maven_cache}\" install"
				
		},
		
		// ----------------------------------------------------------------------------------------------------------------		
		// Configuration of the Deploy stage (the artifact is deployed - if an app then it's executed')
		// ----------------------------------------------------------------------------------------------------------------		
		
		"deploy": {
			"enabled": false			
		}	
	}
}